<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassCalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical">
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="August 23"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@drawable/calendar_date"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"

            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@color/col2"
                android:layout_marginLeft="10dp"></ImageView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                android:text="Physics"
                android:textColor="#A6000000"
                android:textStyle="bold"
                android:textSize="20dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/teacher"
                android:tint="@color/grey"

                android:alpha="0.5"


                />
            <TextView
            android:id="@+id/sirName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingTop="30dp"
            android:paddingLeft="25dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:text="Sir Einstein"
            android:textColor="@color/darkblue"

            android:textSize="14dp" />

            <ImageView
                android:id="@+id/classIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_toRightOf="@id/sirName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="33dp"
                android:src="@drawable/classroom"
                android:tint="@color/grey"

                android:alpha="0.5"/>
            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/classIcon"
                android:gravity="start"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"




                android:text="A102"
                android:textColor="@color/darkblue"

                android:textSize="13dp" />

        </RelativeLayout>
            <TextView
                android:id="@+id/sTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"

                android:layout_marginTop="3dp"
                android:paddingBottom="0dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="09:30 A.M"
                android:textColor="@color/black"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/eTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_below="@id/sTime"
                android:layout_alignParentRight="true"
                android:paddingTop="0dp"
                android:paddingRight="15dp"
                android:paddingBottom="0dp"

                android:text="10:30 A.M"
                android:textColor="@color/black"
                android:textSize="14dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"

            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@color/col3"
                android:layout_marginLeft="10dp"></ImageView>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/eventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingTop="5dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:text="Physics"
                    android:textColor="#AE000000"
                    android:textStyle="bold"
                    android:textSize="20dp" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="6dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/teacher"
                        android:tint="@color/grey"

                        android:alpha="0.5"


                        />
                    <TextView
                        android:id="@+id/sirName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingTop="30dp"
                        android:paddingLeft="25dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="5dp"
                        android:text="Sir Einstein"
                        android:textColor="@color/darkblue"

                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/classIcon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_toRightOf="@id/sirName"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="33dp"
                        android:src="@drawable/classroom"
                        android:tint="@color/grey"

                        android:alpha="0.5"/>
                    <TextView
                        android:id="@+id/eventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/classIcon"
                        android:gravity="start"

                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="30dp"




                        android:text="A102"
                        android:textColor="@color/darkblue"

                        android:textSize="13dp" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/sTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"

                    android:layout_marginTop="3dp"
                    android:paddingBottom="0dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:text="09:30 A.M"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/eTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_below="@id/sTime"
                    android:layout_alignParentRight="true"
                    android:paddingTop="0dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="0dp"

                    android:text="10:30 A.M"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>