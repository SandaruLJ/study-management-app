<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allStudies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllStudiesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/topbar"
            android:orientation="horizontal"
            android:background="@drawable/bottom_nav_bg"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/study_all_title"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/add"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/addIcon"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/white"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/today"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"

                    android:tint="@color/white"
                    android:layout_toLeftOf="@id/addIcon" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/week_tab">
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studyTab"
            app:tabTextAppearance="@style/weekTab"
            android:background="@drawable/week_tab"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:minHeight="?attr/actionBarSize"
            app:tabTextColor="@color/white"
            app:tabIndicatorColor="@color/white"/>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/study_pager">



    </androidx.viewpager.widget.ViewPager>



</LinearLayout>