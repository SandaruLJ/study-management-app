<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Class.addClass"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/topbar"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_bg"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createTarget"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/addIcon"
                android:layout_alignParentEnd="true"
                android:tint="@color/white"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/today"
                android:padding="10dp"
                android:layout_marginTop="5dp"

                android:tint="@color/white"
                android:layout_toLeftOf="@id/addIcon" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp">
                <ImageView
                    android:id="@+id/subjectimg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/study"
                    android:alpha="0.8"
                    android:tint="@color/lite_blue" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/subjectNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/target"
                    app:hintTextAppearance="@style/floatinglabel">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/goalid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgrey"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"

                    android:src="@drawable/color"
                    android:alpha="0.8"
                    android:tint="@color/lite_blue"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:hint="@string/colour"
                        android:textSize="20dp"/>
                    <Button
                        android:id="@+id/colorbtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/choosecolor"
                        android:backgroundTint="@color/col2"
                        android:gravity="right"/>
                    <Button
                        android:id="@+id/testbtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/col2"
                        android:visibility="invisible"
                        android:gravity="right"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgrey"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:id="@+id/dateSelectorEnd"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/today"
                    android:alpha="0.8"
                    android:tint="@color/lite_blue"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:hint="@string/due_date"
                        android:textSize="20dp"
                        />

                    <TextView

                        android:id="@+id/endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/_13_8_2020"

                        android:textFontWeight="600"
                        android:textSize="20dp" />
                </RelativeLayout>




            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgrey"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <!--    <LinearLayout-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:orientation="horizontal"-->
            <!--        android:minHeight="60dp"-->
            <!--        android:paddingTop="15dp"-->
            <!--        android:paddingLeft="20dp"-->
            <!--        android:paddingRight="20dp"-->
            <!--        android:paddingBottom="0dp">-->
            <!--        <ImageView-->
            <!--            android:id="@+id/subjectimg"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginTop="5dp"-->
            <!--            android:layout_marginRight="20dp"-->
            <!--            android:src="@drawable/subject"-->

            <!--            android:alpha="0.8"-->
            <!--            android:tint="@color/lite_blue" />-->



            <!--        <Spinner-->
            <!--            android:id="@+id/subjectInput"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginTop="5dp"-->
            <!--            android:entries="@array/subjects"-->
            <!--            android:spinnerMode="dialog"/>-->

            <!--    </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_baseline_note_add_24"
                    android:alpha="0.8"
                    android:tint="@color/lite_blue"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:hint="@string/description"
                        android:textSize="20dp"/>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/notesInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="150dp"
                        android:background="@drawable/note_border"

                        app:hintTextAppearance="@style/floatinglabel"

                        >


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/descriptionId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"

                            android:textSize="20sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>







            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgrey"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:id="@+id/dateSelectorEnd"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/reminder"
                    android:alpha="0.8"
                    android:tint="@color/lite_blue"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:hint="@string/reminder"
                        android:textSize="20dp"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingRight="20dp"
                        android:id="@+id/reminder"
                        android:paddingBottom="2dp"/>

                </RelativeLayout>




            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgrey"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="60dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp">
                <ImageView
                    android:id="@+id/subjectimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/reminder_time"

                    android:alpha="0.8"
                    android:tint="@color/lite_blue" />

                <TextView
                    android:id="@+id/subjectNameInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"

                    android:paddingRight="20dp"
                    android:layout_marginTop="0dp"
                    android:hint="Set Reminder"
                    app:hintTextAppearance="@style/floatinglabel"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/reminderSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp"

                        android:entries="@array/goal_reminders"
                        android:spinnerMode="dialog"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/timeSelectorView"
                android:visibility="invisible"
                android:background="@color/lightgrey"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@id/timeSelectorStart"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:paddingTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/alarm"
                    android:tint="@color/lite_blue"
                    android:layout_marginRight="20dp"
                    android:alpha="0.8"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:hint="Time"
                    android:paddingTop="20dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/sTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_alignParentEnd="true"
                        android:paddingTop="20dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/save_btn"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/save_subject_button_label"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"></Button>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>